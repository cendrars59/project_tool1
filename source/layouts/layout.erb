<!doctype html>
<html lang="fr en">
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- For Bootstrap responsiveness -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Meta data Open Graph -> Facebook -->
    <meta property="og:title" content="Title Here" />
    <meta property="og:type" content="article" />
    <meta property="og:url" content="http://www.example.com/" />
    <meta property="og:image" content="http://example.com/image.jpg" />
    <meta property="og:description" content="Description Here" />
    <meta property="og:site_name" content="Site Name" />
    <meta property="fb:admins" content="Facebook numeric ID" />

    <!-- Meta data for Twitter -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@publisher_handle">
    <meta name="twitter:title" content="Page Title">
    <meta name="twitter:description" content="Page description less than 200 characters">
    <meta name="twitter:creator" content="@author_handle">
    <meta name="twitter:image:src" content="http://www.example.com/image.jpg">

    <!-- Link to font-awesome lib.. in order to get logo IE-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">

    <!-- Link to get the font Open sans and Montserrat-->
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,700|Montserrat:400,700' rel='stylesheet' type='text/css'>

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "The Middleman" %></title>

    <%= stylesheet_link_tag "all" %>
    <%= javascript_include_tag  "all" %>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- Leave those next 4 lines if you care about users using IE8 -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

  <body class="<%= page_classes %>">
    <!-- ---------------------------------------------------------------------------  -->
    <!--                  Head of the page including a navbar                         -->
    <!-- ---------------------------------------------------------------------------  -->
    <nav class="navbar navbar-default navbar-fixed-top navbar-wagon" role="navigation">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <% link_to "http://placehold.it/50x50", class: "navbar-brand" do %>
            <%= image_tag 'logo.jpg' %>
          <% end %>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <li>
              <% link_to "/referenciers_list.html" do %>
                <i class="fa fa-bars"></i>  Référenciers
              <% end %>
            </li>
            <li>
              <% link_to "/pop-up.html" do %>
                <i class="fa fa-sticky-note-o"></i> Pop-up
              <% end %>
            </li>
            <li>
              <% link_to "/reference.html" do %>
                <i class="fa fa-barcode"></i> References
              <% end %>
            </li>
            <li>
              <% link_to "/etudes.html" do %>
                <i class="fa  fa-cart-plus"></i> Etudes
              <% end %>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Follow-me <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><a href="https://www.facebook.com/"><i class="fa fa-facebook-square"></i> Facebook</a></li>
                <li><a href="https://twitter.com/"><i class="fa fa-twitter-square"></i> Twitter</a></li>
                <li><a href="http://www.linkedin.com" target="_blank"><i class="fa fa-linkedin-square"></i> LinkedIn</a></li>
              </ul>
            </li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

    <!-- ---------------------------------------------------------------------------  -->
    <!--                  Content of the page                                         -->
    <!-- ---------------------------------------------------------------------------  -->

    <div class="main-div-body">
     <%= yield %>
    </div>

    <!-- ---------------------------------------------------------------------------  -->
    <!--                  Footer of the page                                          -->
    <!-- ---------------------------------------------------------------------------  -->

    <div class="Clear"></div>
  </body>
</html>
